<h1>Pokemon</h1>
<%= render "shared/search", { path: pokemon_new_path } %>
<div>
  <% if @pokemon.present? %>
    <table>
      <tr>
        <td>No.</td>
        <td><%= @pokemon.id %></td>
      </tr>
      <tr>
        <td>name:</td>
        <td><%= @pokemon.name %></td>
      </tr>
    </table>
    <%= image_tag(@pokemon.sprites.front_default, size: "200") %>
  <% else %>
    <p>検索してね！</p>
  <% end %>
</div>
